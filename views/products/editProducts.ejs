
 <%- include('../partial/header'); %>

 <div class="hk-pg-wrapper">
	<div class="container-fluid" >
            <div class="row">
                <div class="col-10 mx-auto mt-10" >                                                    
                        <form method="POST" class="row g-3" id="product-edit-form" onsubmit="return false">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="form-label">Ürün adı<span style="color:red">*</span></label>
                                    <input type="text"  class="form-control"  value="<%= data.productName%>"  name="productName" required>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="form-label">Stok Miktarı<span style="color:red">*</span></label>
                                    <input class="form-control  ms-n5"  type="number" min="1" step="any" value="<%= data.amountStock%>"  name="amountStock" required/> 
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="form-label">Birim Fiyatı<span style="color:red">*</span></label>
                                <input class="form-control currencyInput" type="currency"  value="<%= data.unitPrice%>"  name="unitPrice" required/>
                                
                            </div>
                            <div class="form-group">
                                <label class="form-label">Alış Fiyatı<span style="color:red">*</span></label>
                                <input class="form-control currencyInput" type="currency"  value="<%= data.purchasePrice%>"  name="purchasePrice" />
                                
                            </div>
                            <div class="form-group">
                                <label class="form-label">Satış Fiyatı<span style="color:red">*</span></label>
                                <input class="form-control  currencyInput" type="currency"   value="<%= data.salesPrice%>"  name="salesPrice" />
                                
                            </div>
                            <div class="col-11 d-flex justify-content-center mt-5">
                                <button class="btn addItem" type="submit" id="product-edit-button" data-id="<%= data._id%>">Kayıt</button>
                            </div>
                        </form>				
                        		 		
                    </div>
                </div>
         </div>                                                   
	</div>
</div>


<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
 <%- include('../partial/footer'); %>