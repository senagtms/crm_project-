
 <%- include('../partial/header'); %>

 <div class="hk-pg-wrapper">
	<div class="container-fluid" >
            <div class="row">
                <div class="col-10 mx-auto mt-3" >   
                    <div  id="specialBtn">
                        <a href="/app/products" class="btn goBack"><i class="las la-arrow-left"></i>Geri</a> 
                      </div>	                                                 
                        <form method="POST" onsubmit="return false" id="product-create-form"  class="row g-3" >
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="form-label">Ürün adı<span style="color:red">*</span></label>
                                    <input type="text"  class="form-control" name="productName" required>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="form-label">Stok Miktarı<span style="color:red">*</span></label>
                                    <input class="form-control  ms-n5" name="amountStock" type="number" min="1" step="any"  required/> 
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="form-label">Birim Fiyatı<span style="color:red">*</span></label>
                                <input class="form-control currencyInput" type="text"  name="unitPrice" required/>
                                
                            </div>
                            <div class="form-group">
                                <label class="form-label">Alış Fiyatı<span style="color:red">*</span></label>
                                <input class="form-control currencyInput"  type="text" name="purchasePrice" value="" required/>
                                
                            </div>
                            <div class="form-group">
                                <label class="form-label">Satış Fiyatı<span style="color:red">*</span></label>
                                <input class="form-control currencyInput"  type="text"  name="salesPrice" required />
                                
                            </div>
                            <div class="col-11 d-flex justify-content-center mt-5">
                                <button class="btn addItem"  id="product-create-button"  type="button">Kayıt</button>
                            </div>
                        </form>				
                        <% if(error){ %>

                            <div class="alert alert-danger" role="alert">
                                <%= error %>
                              </div>
                        
                          <% }  %>  		 		
                    </div>
                </div>
         </div>                                                   
	</div>
</div>



 <%- include('../partial/footer'); %>