                            <ul class="list-unstyled d-flex flex-wrap"  >
                                <li class="col-md-6 mb-3 mt-3" >
                                    <div class="fs-7">Ünvanı</div>
                                    <div class="text-dark fw-medium"><%= data.companytitle%></div>
                                </li>
                                <li class="col-md-6 mb-3  mt-3" >
                                    <div class="fs-7">Adı</div>
                                    <div class="text-dark fw-medium"><%= data.name%></div>
                                </li>
                                <li class="col-md-6 mb-3  mt-3">
                                    <div class="fs-7">Soyadı</div>
                                    <div class="text-dark fw-medium"><%= data.surname%></div>
