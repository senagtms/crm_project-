
 <%- include('./partial/header'); %>
		

 <div class="hk-pg-wrapper">
	<div class="container-fluid">
            <div class="row">
                <div class="col-11 mx-auto" >
                    <div  id="specialBtn">
                        <a href="/app" class="btn goBack"><i class="las la-arrow-left"></i>Geri</a> 
                      <a href="offer/newOffer"><button type="button" class="btn  addItem ms-2"> <i class="las la-plus"></i>Ekle</button></a>
                      </div>		
                      <div class="d-flex justify-content-center">
                        <div class="input-affix-wrapper input-search mb-5  w-350p ">
                            <input type="text" class="form-control page-search " placeholder="Teklif Ara" aria-label="Username" aria-describedby="basic-addon1">
                            <span class="input-suffix"><span class="btn-input-clear"><i class="bi bi-x-circle-fill"></i></span>
                                <span class="spinner-border spinner-border-sm input-loader text-primary" role="status">
                                    <span class="sr-only">Loading...</span>
                                </span>
                            </span>
                        </div> 
                    </div>												
                    <table id="dataTable"   class="table table-striped" style="width:100%">
                                 <thead>
                                     <tr>
                                         <th>Teklif Paketi</th>
                                         <th>Firma Adı</th>
                                         <th>Teklif Tarihi</th>
                                         <th>Teklif Fiyatı</th>
                                         <th></th><th></th>
                                 
                                     </tr>
                                 </thead>
                                 <tbody>
                                    <% for(var i = 0; i < data.length; i++) { %>
                                     <tr class="table-light tablesearch" style="color: rgb(48, 47, 47) !important;">
                                         <td><%= data[i].title%></td>
                                         <td><% if(companyData[i].companytitle) {%><%= companyData[i].companytitle%> <% }else{ %> <% } %> </td>
                                         <td><%= data[i].offerDate.toLocaleDateString()%></td>
                                         <td><%= data[i].totalPrice.toLocaleString(undefined, {minimumFractionDigits: 2})%>  <%if(data[i].currency == "usd"){%><span style="color:green; font-size: 15px">$</span><%} else{ %><span  style="color:goldenrod">₺</span><%}%></td>
                                         <td>
                                             <a href="offer/editOffer/<%= data[i]._id%>" class="btn btn-icon btn-rounded btn-flush-primary flush-soft-hover" data-bs-toggle="tooltip" data-bs-original-title="Edit"><span class="icon"><span class="feather-icon"><i data-feather="edit-3"></i></span></span></a>
                                             <a data-id="<%= data[i]._id%>" class="delete_offer btn btn-icon btn-rounded btn-flush-danger flush-soft-hover" data-bs-toggle="tooltip" data-bs-original-title="Delete"><span class="icon"><span class="feather-icon"><i data-feather="trash-2"></i></span></span></a>
                                         </td>
                                         <td>
                                            <button data-id="<%= data[i]._id%>" type="submit" class="btn border border-primary bill" id="createBill">Fatura Oluştur</button>
                                         </td>
                                     </tr>
                                     <% } %>
                                 </tbody>
                    </table>
                </div>
            </div>
         </div>                                               
</div>



 <%- include('./partial/footer'); %>