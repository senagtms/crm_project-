
 <%- include('../partial/header'); %>

 <div class="hk-pg-wrapper">
	<div class="container-fluid"  >
            <div class="row"  >
                <div class="col-8 mx-auto" >
                    <div class="card card-border mt-5 shadow-lg p-3 mb-5 bg-body rounded" id="printableArea">
                        <div class="card-body" >
